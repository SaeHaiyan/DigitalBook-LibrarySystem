@model RiddlesWebApp.Models.Riddle

@{
    ViewData["Title"] = "Create";
}

<!-- Page-specific styles -->
<style>

    body {
        font-family: 'Montserrat', sans-serif; /* Set Montserrat as the page font */
        background-color: #895129; /* Dark brown background color */
        color: white; /* Text color for readability */
    }

    .card {
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background-color: #B5C18E; /* Updated card background color */
        padding: 20px;
        margin-top: 30px;
    }

    /* Increased the size of "Add Book" title and added space above */
    .card-title {
        font-size: 2.5rem; /* Increased title size */
        font-weight: bold;
        color: black; /* Title color */
        text-align: center; /* Center the title */
        margin-bottom: 40px; /* Added more space below the title */
        margin-top: 50px; /* Added space above the title */
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 10px;
        font-size: 1.2rem; /* Increased font size for input fields */
        margin-bottom: 20px; /* Space between input fields and buttons */
    }

    .form-group label {
        font-weight: bold;
        color: black; /* Label text color */
        font-size: 1.5rem; /* Increased font size for labels */
        margin-bottom: 5px;
        padding: 10px 0; /* Increased padding for labels (top and bottom) */
    }

    .btn {
        background-color: #000 !important; /* Black background for buttons */
        border-color: #000 !important; /* Black border */
        color: #fff !important; /* White text color */
        text-align: center; /* Center the text */
        padding: 10px 15px; /* Decreased padding for smaller buttons */
        font-size: 1rem;
        border-radius: 5px; /* Rounded corners */
        width: 100%; /* Make buttons full width */
        max-width: 200px; /* Ensure buttons don’t get too wide */
        transition: all 0.3s ease; /* Smooth transition for hover effect */
    }

        .btn:hover {
            background-color: #333 !important; /* Darker black on hover */
            border-color: #333 !important; /* Darker black border on hover */
            transform: scale(1.05); /* Slightly enlarge the button on hover */
        }

    /* Center the buttons */
    .buttons-row {
        display: flex;
        justify-content: center; /* Center the buttons */
        gap: 10px; /* Gap between the buttons */
        margin-top: 20px; /* Add some space above buttons */
    }

    .text-danger {
        color: red !important; /* Error message color */
    }

    .form-container {
        margin-bottom: 40px; /* Space below the form */
    }

    .form-group {
        margin-bottom: 20px; /* Added space between form fields and buttons */
    }
</style>

<h1 class="card-title">Add Book</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card form-container">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Question Field -->
                <div class="form-group">
                    <label class="control-label">Book</label>
                    <input asp-for="Question" class="form-control" />
                    <span asp-validation-for="Question" class="text-danger"></span>
                </div>

                <!-- Answer Field -->
                <div class="form-group">
                    <label class="control-label">Genre</label>
                    <input asp-for="Answer" class="form-control" />
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>

                <!-- Buttons: Back to List and Add -->
                <div class="buttons-row">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@{
    ViewData["Title"] = "Home Page";
}

<!-- Add Montserrat font link to head -->
<head>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet">
</head>

<style>
    /* Apply Montserrat font to the entire body */
    body {
        background-color: #895129;
        padding: -5px;
        font-family: 'Montserrat', sans-serif; /* Apply Montserrat font */
    }

    /* Ensure the carousel is properly positioned with decreased top padding */
    #carouselExampleIndicators {
        margin-top: 50px; /* Decreased the margin-top to reduce space above the carousel */
        height: 400px; /* Reduce carousel height */
        position: relative;
    }

    .carousel-inner {
        height: 100%;
    }

    /* Standardize image size in the carousel */
    .carousel-item {
        position: relative;
    }

        .carousel-item img {
            height: 100%;
            object-fit: cover;
        }

        .carousel-item::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.4); /* Dark overlay with 40% opacity */
            z-index: 1; /* Ensure the overlay is above the image but below the text */
        }

    .carousel-caption {
        position: absolute;
        top: 40%; /* Adjust this value to move text to desired position */
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: white;
        font-size: 36px;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        z-index: 2; /* Ensure text appears above the overlay */
    }

    /* Apply specific footer styles for this page */
    .home-footer {
        margin: 0;
        padding: 20px 0;
        background-color: #384B70; /* Footer color */
        color: #fff; /* Footer text color */
        text-align: center;
        width: 100%;
        position: relative;
        left: 0;
        right: 0;
    }

    /* Remove any unwanted padding/margin from the container */
    .container {
        padding-right: 0;
        padding-left: 0;
    }

    /* New section styling */
    .intro-section {
        color: black; /* Change text color to black */
        padding: 50px 0;
        text-align: center;
        margin-top: 40px; /* Add space above the title section to separate it from the carousel */
        width: 100%; /* Make it full width */
        position: relative; /* Ensure it covers the entire width */
        left: 0;
        right: 0;
    }

    .intro-title {
        font-size: 36px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .intro-text {
        font-size: 18px;
        margin-bottom: 30px;
        color: white; /* Change text color to white */
    }

    .btn-primary {
        background-color: #B5C18E; /* Set the color to B5C18E */
        border-color: #B5C18E;
        color: black; /* Set text color to black */
    }

        .btn-primary:hover {
            background-color: #A4B88E; /* Slightly darker shade for hover effect */
            border-color: #A4B88E;
        }

    /* Style for Customer Reviews Section */
    .card {
        border: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        height: 100%;
        background-color: #B5C18E; /* Review card color set to #B5C18E */
    }

        .card:hover {
            transform: translateY(-10px); /* Lift the card */
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1); /* Add shadow on hover */
        }

    .card-body {
        padding: 30px;
        border-radius: 10px;
        text-align: center;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .card-text {
        font-size: 1rem;
        color: #555;
    }

    /* Styling for the Review Stars */
    .review-stars {
        color: gold;
        font-size: 18px;
    }

    /* Add extra space below reviews */
    .container.mt-5 {
        margin-bottom: 50px; /* Add extra space below reviews section */
    }

    /* Styling for the Return to Top Button */
    .return-to-top {
        position: fixed;
        bottom: 30px;
        right: 30px;
        background-color: #B5C18E; /* Set the color to B5C18E */
        color: white;
        border: none;
        border-radius: 50%;
        padding: 15px;
        font-size: 18px;
        cursor: pointer;
        z-index: 10;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        width: 50px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .return-to-top:hover {
            background-color: #A4B88E; /* Slightly darker shade for hover effect */
        }

        .return-to-top span {
            color: black; /* Set arrow icon color to black */
        }
</style>

<!-- New Introduction Section Without the Container -->
<div class="intro-section">
    <div class="row align-items-center">
        <!-- Text and Details in the Center -->
        <div class="col-12">
            <h2 class="intro-title">Welcome to DigiBook Library System</h2>
            <p class="intro-text">Manage your reading list and create a checklist of the books you’ve read.</p>
            <a href="@Url.Action("Index", "Riddles")" class="btn btn-primary btn-lg">Explore the Library</a>
        </div>
    </div>
</div>

<!-- Banner Carousel -->
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://uiii.ac.id/assets/images/1636690539-alfons-morales-YLSwjSy7stw-unsplash-2.jpg" class="d-block w-100" alt="First Banner">
            <div class="carousel-caption">
                <p>Discover and manage your reading list</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://cdn.antaranews.com/cache/1200x800/2012/12/20121228ebook_2328230b.jpg" class="d-block w-100" alt="Second Banner">
            <div class="carousel-caption">
                <p>Explore books from all genres</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://image.cnbcfm.com/api/v1/image/106503641-1587680544089young-woman-reading-book-on-stairs-in-the-loft-art-work-studio-room-slow-life_t20_prv1y1.jpg?v=1673368411" class="d-block w-100" alt="Third Banner">
            <div class="carousel-caption">
                <p>Track your progress and share your favorite books</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Customer Reviews Section -->
<div class="container mt-5">
    <div class="text-center">
        <h2 class="display-5" style="color: white;">Customer Reviews</h2>
        <p class="lead" style="color: white;">See what our users have to say about DigiBook Library!</p>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">"A Great Way to Keep Track of Books"</h5>
                    <p class="card-text">"I love how easy it is to keep track of my reading progress and manage my book list. Highly recommended!"</p>
                    <div class="review-stars">
                        &#9733;&#9733;&#9733;&#9733;&#9733; <!-- 5 stars -->
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">"A Must-Have for Book Lovers"</h5>
                    <p class="card-text">"This app is perfect for anyone who loves reading and wants to keep a checklist of all the books they've completed."</p>
                    <div class="review-stars">
                        &#9733;&#9733;&#9733;&#9733;&#9734; <!-- 4 stars -->
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">"An Amazing Platform"</h5>
                    <p class="card-text">"I can't imagine managing my reading list without this. It's intuitive and has everything I need!"</p>
                    <div class="review-stars">
                        &#9733;&#9733;&#9733;&#9733;&#9734; <!-- 4 stars -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Return to Top Button -->
<button class="return-to-top" onclick="window.scrollTo({top: 0, behavior: 'smooth'});">
    <span>&#8593;</span> <!-- Arrow icon now inside a span tag to color it black -->
</button>
